<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ReaderTheme" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="ReaderTheme.Detail" parent="ReaderTheme">
        <item name="android:windowEnterTransition">@transition/detail_enter</item>
        <item name="android:windowReturnTransition">@transition/detail_enter</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ReaderTheme.Main" parent="ReaderTheme">
        <item name="android:windowExitTransition">@transition/grid_exit</item>
        <item name="android:windowReenterTransition">@transition/grid_enter</item>
    </style>


</resources>